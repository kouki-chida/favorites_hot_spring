<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
    <%= render 'users/list', hot_spring: @hot_spring, user: @user %>
  </div>
    <div class="col-md-8 offset-md-1">
      <h2>温泉一覧</h2>
      <table class="table table-hover table-inverse">
      <thead>
          <tr>
              <th>画像</th>
              <th>温泉名</th>
              <th>おすすめポイント</th>
              <th>いいね数</th>
              <th>コメント数</th>
          </tr>
      </thead>
      <tbody>
          <% @hot_springs.each do |hot_spring| %>
            <tr>
              <td>
                <%= link_to user_path(hot_spring.user_id) do %>
                  <%= attachment_image_tag hot_spring.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td>
                <%= link_to hot_spring_path(hot_spring.id) do%>
                    <%= hot_spring.hot_spring_name %>
                <% end %>
              </td>
                <td><%= hot_spring.text %></td>
                <td class="favorite"><div id="favorite_<%= hot_spring.id %>"><%= render "favorites/favorite", hot_spring: hot_spring %></div></td>
                <td class="index"><div id="hot_spring_<%= hot_spring.id %>"><%= render "hot_spring_comments/index", hot_spring: hot_spring %></div></td>
            </tr>
      </tbody>
      <% end %>
      </table>
   </div>
  </div>
</main>